<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>StreamHub</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    </head>

    <body class="bg-dark text-light">
        <header class="py-4 bg-primary text-center">
            <h1 class="display-4 fw-bold">
                <i class="fas fa-film"></i> StreamHub
            </h1>
            <p class="lead">Your Go-To Platform for Movies About Tech &
                Innovation</p>
        </header>

        <div class="container my-5">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% users.map((val, i) => { %>
                <div class="col">
                    <div class="card h-100 bg-secondary text-light">
                        <img src="<%= val.image %>" class="card-img-top"
                            alt="<%= val.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= val.name %></h5>
                            <p class="card-text"><strong>Price:</strong> <%=
                                val.price %></p>
                            <p class="card-text"><%= val.desc %></p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a class="btn btn-danger"
                                href="/delete?id=<%= val.id %>">Delete</a>
                            <a class="btn btn-warning"
                                href="/edit?id=<%= val.id %>">Edit</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>

        <footer class="py-4 bg-primary text-center">
            <p class="mb-0">Â© 2024 StreamHub. All Rights Reserved.</p>
        </footer>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>
